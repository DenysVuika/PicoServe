{
  "name": "@denysvuika/picoserve",
  "version": "0.1.0",
  "description": "TypeScript-based Node.js and Express.js server for serving static files",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "bin": {
    "psrv": "dist/server.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node --env-file=.env dist/server.js",
    "dev": "node --env-file=.env -r ts-node/register --watch src/server.ts",
    "lint": "oxlint src",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "express",
    "static-files",
    "server",
    "typescript",
    "jwt",
    "rate-limiting",
    "proxy",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DenysVuika/PicoServe.git"
  },
  "bugs": {
    "url": "https://github.com/DenysVuika/PicoServe/issues"
  },
  "homepage": "https://github.com/DenysVuika/PicoServe#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.0",
    "oxlint": "^1.23.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
