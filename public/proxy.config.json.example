{
  "proxies": [
    {
      "path": "/auth",
      "target": "https://your-oidc-provider.com",
      "options": {
        "changeOrigin": true,
        "rateLimit": {
          "windowMs": 60000,
          "max": 50
        }
      }
    },
    {
      "path": "/api",
      "target": "${BACKEND_URL}",
      "options": {
        "changeOrigin": true,
        "pathRewrite": {
          "^/api": ""
        },
        "rateLimit": {
          "windowMs": 60000,
          "max": 100
        }
      }
    }
  ]
}

